<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Palette based on sample UI: light content, dark teal sidebar, green primary -->
  <Color x:Key="BgColor">#F5F7FA</Color>
  <Color x:Key="SurfaceColor">#FFFFFFFF</Color>
  <Color x:Key="BorderColor">#E5E7EB</Color>
  <Color x:Key="TextColor">#0F172A</Color>
  <Color x:Key="MutedTextColor">#64748B</Color>
  <Color x:Key="PrimaryColor">#16A34A</Color>
  <Color x:Key="PrimaryDark">#0F7A37</Color>
  <Color x:Key="DangerColor">#DC2626</Color>
  <Color x:Key="SidebarColor">#083344</Color>
  <Color x:Key="TopbarColor">#0B6E4F</Color>

  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BgColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
  <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="PrimaryBrushDark" Color="{StaticResource PrimaryDark}"/>
  <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
  <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
  <SolidColorBrush x:Key="TopbarBrush" Color="{StaticResource TopbarColor}"/>

  <!-- Base -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>
  <Style TargetType="Page" BasedOn="{StaticResource {x:Type Window}}"/>
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
  </Style>
  <Style TargetType="TextBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
  <Style TargetType="PasswordBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
  <Style TargetType="ComboBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="4"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
    <Setter Property="MinWidth" Value="140"/>
  </Style>
  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
  <!-- Primary action button -->
  <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrushDark}"/>
  </Style>
  <!-- Danger/Destructive action button -->
  <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <!-- Link-like buttons -->
  <Style x:Key="LinkButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>
  <Style x:Key="LinkButton.Danger" TargetType="Button" BasedOn="{StaticResource LinkButton}">
    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
  </Style>

  <!-- Title text style for headings -->
  <Style x:Key="TitleText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="Foreground" Value="#111827"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="FontSize" Value="15"/>
  </Style>

  <!-- Card surfaces with subtle shadow -->
  <Style TargetType="Border" x:Key="Card">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="12"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>
  <Style TargetType="Border" x:Key="CardBorder" BasedOn="{StaticResource Card}"/>

  <!-- DataGrid light styling -->
  <Style TargetType="DataGrid">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="RowBackground" Value="#FFFFFFFF"/>
    <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
    <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
    <Setter Property="VerticalGridLinesBrush" Value="#E5E7EB"/>
  </Style>
  <Style TargetType="DataGridColumnHeader">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="#F9FAFB"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
  </Style>
</ResourceDictionary>
