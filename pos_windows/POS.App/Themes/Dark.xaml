<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Palette -->
  <Color x:Key="BgColor">#121212</Color>
  <Color x:Key="SurfaceColor">#1E1E1E</Color>
  <Color x:Key="BorderColor">#2C2C2C</Color>
  <!-- Base text is near-white for readability on dark background -->
  <Color x:Key="TextColor">#EDEDED</Color>
  <Color x:Key="MutedTextColor">#B0B0B0</Color>
  <!-- Accent and title are orange for highlights -->
  <Color x:Key="AccentColor">#FF9800</Color>
  <Color x:Key="TitleColor">#FFA500</Color>

  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BgColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
  <!-- Make all text use orange tone -->
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="TitleBrush" Color="{StaticResource TitleColor}"/>
  <!-- Compatibility aliases -->
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="PrimaryBrushLight" Color="#304449"/>

  <!-- Base -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>
  <Style TargetType="Page">
    <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
  </Style>
  <Style TargetType="TextBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
  <Style TargetType="PasswordBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
  <Style TargetType="ComboBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="4"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
    <Setter Property="MinWidth" Value="140"/>
  </Style>
  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
  <!-- Emphasized action button using accent background -->
  <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Foreground" Value="Black"/>
  </Style>
  <!-- Danger/Destructive action button -->
  <SolidColorBrush x:Key="DangerBrush" Color="#E53935"/>
  <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <!-- Link-like button (text only); used in grids for Edit/Delete -->
  <Style x:Key="LinkButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>
  <!-- Danger variant of link button -->
  <Style x:Key="LinkButton.Danger" TargetType="Button" BasedOn="{StaticResource LinkButton}">
    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
  </Style>
  <!-- Title text style for headings -->
  <Style x:Key="TitleText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>
  <Style TargetType="Border" x:Key="Card">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="12"/>
  </Style>
  <!-- Backward compatibility with CardBorder style name -->
  <Style TargetType="Border" x:Key="CardBorder" BasedOn="{StaticResource Card}"/>
  <Style TargetType="DataGrid">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="RowBackground" Value="#1F1F1F"/>
    <Setter Property="AlternatingRowBackground" Value="#232323"/>
    <Setter Property="HorizontalGridLinesBrush" Value="#333"/>
    <Setter Property="VerticalGridLinesBrush" Value="#333"/>
  </Style>
  <Style TargetType="DataGridColumnHeader">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
  </Style>
</ResourceDictionary>
