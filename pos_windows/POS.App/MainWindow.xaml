<Window x:Class="POS.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS Windows" Height="720" Width="1200">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="260"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <!-- Left nav: dark teal sidebar -->
    <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" BorderBrush="#07323F" BorderThickness="0,0,1,0" Padding="0">
      <Border.Resources>
        <!-- Sidebar default button look -->
        <Style TargetType="Button">
          <Setter Property="Foreground" Value="White"/>
          <Setter Property="Background" Value="Transparent"/>
          <Setter Property="BorderThickness" Value="0"/>
          <Setter Property="HorizontalContentAlignment" Value="Left"/>
          <Setter Property="Padding" Value="12"/>
          <Setter Property="Margin" Value="4,2,4,2"/>
          <Setter Property="Cursor" Value="Hand"/>
          <Setter Property="FontSize" Value="14"/>
          <Setter Property="FontWeight" Value="SemiBold"/>
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                  <ContentPresenter Margin="4"/>
                </Border>
                <ControlTemplate.Triggers>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#114B5F"/>
                  </Trigger>
                </ControlTemplate.Triggers>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
        </Style>
        <Style TargetType="TextBlock"><Setter Property="Foreground" Value="White"/></Style>
        <Style TargetType="Label"><Setter Property="Foreground" Value="White"/></Style>
        <Style TargetType="Expander"><Setter Property="Foreground" Value="White"/></Style>
        <Style TargetType="ToggleButton"><Setter Property="Foreground" Value="White"/></Style>
      </Border.Resources>
      <DockPanel>
        <!-- Header (logo + store name) -->
        <StackPanel DockPanel.Dock="Top" Margin="12,12,12,8">
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image x:Name="ImgLogo" Width="28" Height="28" Margin="0,0,8,0"/>
            <TextBlock x:Name="TxtStore" Text="SupaPOS" FontSize="18" FontWeight="Bold"/>
          </StackPanel>
        </StackPanel>
        <!-- Storage info bottom -->
        <Border DockPanel.Dock="Bottom" Padding="12" BorderThickness="1,1,0,0" BorderBrush="#0F3B4B">
          <TextBlock x:Name="TxtStorage" Foreground="#C7D2FE" Text="Storage: SQLite (EF)"/>
        </Border>
        <!-- Nav body -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">
          <Button Content="POS (Kasir)" Click="BtnPos_OnClick"/>
          <Button Content="Penjualan" Click="BtnSales_OnClick"/>
          <Button Content="Inventory" Click="BtnInventory_OnClick"/>
          <Separator/>
          <Expander Header="Master Data" IsExpanded="True">
            <StackPanel>
              <Button Content="Data Barang" Click="BtnProduk_OnClick"/>
              <Button Content="Supplier" Click="BtnSupplier_OnClick"/>
              <Button Content="Salesman" Click="BtnSalesman_OnClick"/>
              <Button Content="Member/Customer" Click="BtnCustomer_OnClick"/>
              <Button Content="Jenis Barang" Click="BtnJenis_OnClick"/>
              <!-- Kategori dihapus untuk menyederhanakan master data -->
              <Button Content="Data Rekening" Click="BtnRekening_OnClick"/>
              <Button Content="Mesin EDC" Click="BtnEdc_OnClick"/>
            </StackPanel>
          </Expander>
          <Expander Header="Transaksi" IsExpanded="True" Margin="0,8,0,0">
            <StackPanel>
              <Button Content="Pembelian" Click="BtnPembelian_OnClick"/>
              <Button Content="Retur Penjualan" Click="BtnReturJual_OnClick"/>
              <Button Content="Retur Pembelian" Click="BtnReturBeli_OnClick"/>
              <Button Content="Pembagian Stok" Click="BtnPembagian_OnClick"/>
              <Button Content="Mutasi Stok" Click="BtnMutasi_OnClick"/>
              <Button Content="Stok Opname" Click="BtnOpname_OnClick"/>
            </StackPanel>
          </Expander>
          <Expander Header="Back Office" IsExpanded="False" Margin="0,8,0,0">
            <StackPanel>
              <Button Content="Pengeluaran" Click="BtnPengeluaran_OnClick"/>
              <Button Content="Mutasi Antar Rekening" Click="BtnMutasiRek_OnClick"/>
              <Button Content="Akuntansi Ringkas" Click="BtnAkuntansi_OnClick"/>
              <Button Content="Tools (Storage/Migrasi/Seed)" Click="BtnTools_OnClick"/>
            </StackPanel>
          </Expander>
          <Expander Header="Laporan" IsExpanded="False" Margin="0,8,0,0">
            <StackPanel>
              <Button Content="Lap Jual Total" Click="BtnLapJualTotal_OnClick"/>
              <Button Content="Lap Jual / Salesman" Click="BtnLapJualSalesman_OnClick"/>
              <Button Content="Lap Jual / Supplier" Click="BtnLapJualSupplier_OnClick"/>
              <Button Content="Laba Rugi" Click="BtnLapLR_OnClick"/>
              <Button Content="Lap Pembelian" Click="BtnLapBeli_OnClick"/>
              <Button Content="Lap Hutang/Piutang" Click="BtnLapHutang_OnClick"/>
            </StackPanel>
          </Expander>
          <Separator/>
          <Button Content="Printer" Click="BtnPrinter_OnClick"/>
        </StackPanel>
      </ScrollViewer>
      </DockPanel>
    </Border>
    <!-- Content -->
    <DockPanel Grid.Column="1">
      <Border DockPanel.Dock="Top" Background="{StaticResource TopbarBrush}" Padding="12" Margin="0,0,0,8">
        <DockPanel>
          <TextBlock Text="Dashboard" Foreground="White" FontWeight="SemiBold" DockPanel.Dock="Left"/>
        </DockPanel>
      </Border>
      <ScrollViewer>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
      </ScrollViewer>
    </DockPanel>
  </Grid>
</Window>
