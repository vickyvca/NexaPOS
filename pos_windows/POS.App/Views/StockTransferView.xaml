<Page x:Class="POS.App.Views.StockTransferView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Mutasi Stok">
    <DockPanel Margin="16">
        <TextBlock DockPanel.Dock="Top" Text="Mutasi Stok Antar Gudang" Style="{StaticResource TitleText}" Margin="0,0,0,12"/>
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Dari:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbFrom" Width="220" Margin="8,0"/>
                <TextBlock Text="Ke:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbTo" Width="220" Margin="8,0"/>
                <Button Content="Tambah Item" Click="AddItem_OnClick" Style="{StaticResource AccentButton}"/>
            </StackPanel>
        </DockPanel>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Produk" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="100"/>
                <DataGridTemplateColumn Header="Aksi" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Hapus" Click="Remove_OnClick" Style="{StaticResource LinkButton.Danger}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button DockPanel.Dock="Bottom" Content="Simpan Mutasi" HorizontalAlignment="Right" Margin="0,16,0,0" Click="Save_OnClick" Style="{StaticResource AccentButton}"/>
    </DockPanel>
</Page>
