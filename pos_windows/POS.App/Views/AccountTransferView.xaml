<Page x:Class="POS.App.Views.AccountTransferView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="Mutasi Antar Rekening">
    <DockPanel Margin="16">
        <TextBlock DockPanel.Dock="Top" Text="Mutasi Antar Rekening" Style="{StaticResource TitleText}" Margin="0,0,0,12"/>
        <Border DockPanel.Dock="Top" Style="{StaticResource CardBorder}" Padding="8" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <DatePicker x:Name="DtDate" SelectedDate="{x:Static sys:DateTime.Today}"/>
                <TextBox x:Name="TxtFrom" Width="160" Margin="8,0" ToolTip="Dari Akun"/>
                <TextBox x:Name="TxtTo" Width="160" Margin="8,0" ToolTip="Ke Akun"/>
                <TextBox x:Name="TxtAmount" Width="120" Margin="8,0" ToolTip="Jumlah"/>
                <TextBox x:Name="TxtNote" Width="200" Margin="8,0" ToolTip="Catatan"/>
                <Button Content="Tambah" Click="Add_OnClick" Style="{StaticResource AccentButton}"/>
            </StackPanel>
        </Border>
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Dari:" VerticalAlignment="Center"/>
                <DatePicker x:Name="DtFrom" Margin="8,0"/>
                <TextBlock Text="Sampai:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <DatePicker x:Name="DtTo" Margin="8,0"/>
                <Button Content="Filter" Click="Filter_OnClick" Margin="8,0"/>
            </StackPanel>
        </DockPanel>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tanggal" Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" Width="120"/>
                <DataGridTextColumn Header="Dari" Binding="{Binding FromAccount}" Width="160"/>
                <DataGridTextColumn Header="Ke" Binding="{Binding ToAccount}" Width="160"/>
                <DataGridTextColumn Header="Jumlah" Binding="{Binding Amount, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="Catatan" Binding="{Binding Note}" Width="*"/>
                <DataGridTemplateColumn Header="Aksi" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Hapus" Click="Delete_OnClick" Style="{StaticResource LinkButton.Danger}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
