<Page x:Class="POS.App.Views.ReportDebtsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Laporan Hutang">
    <DockPanel Margin="16">
        <TextBlock DockPanel.Dock="Top" Text="Laporan Hutang (Payables)" Style="{StaticResource TitleText}" Margin="0,0,0,12"/>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nomor Pembelian" Binding="{Binding PurchaseId}" Width="160"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="Dibayar" Binding="{Binding Paid, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="Saldo" Binding="{Binding Balance, StringFormat=N0}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
