<Window x:Class="POS.App.Views.QuickProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produk Baru" Height="340" Width="420">
  <StackPanel Margin="12">
    <TextBlock Text="Nama Barang"/>
    <TextBox x:Name="TxtName"/>
    <TextBlock Text="Artikel"/>
    <TextBox x:Name="TxtArticle"/>
    <TextBlock Text="Supplier"/>
    <ComboBox x:Name="CmbSupplier" DisplayMemberPath="Name" SelectedValuePath="Id"/>
    <TextBlock Text="Jenis Barang"/>
    <ComboBox x:Name="CmbType" DisplayMemberPath="Name" SelectedValuePath="Id"/>
    <TextBlock Text="SKU"/>
    <TextBox x:Name="TxtSku"/>
    <TextBlock Text="Barcode (kosongkan untuk auto)"/>
    <TextBox x:Name="TxtBarcode"/>
    <TextBlock Text="Harga H1"/>
    <TextBox x:Name="TxtH1"/>
    <TextBlock Text="Harga H2"/>
    <TextBox x:Name="TxtH2"/>
    <TextBlock Text="Harga Grosir"/>
    <TextBox x:Name="TxtG"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="Simpan" Click="Save_OnClick"/>
      <Button Content="Batal" Click="Cancel_OnClick"/>
    </StackPanel>
  </StackPanel>
</Window>
