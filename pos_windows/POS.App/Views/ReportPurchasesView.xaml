<Page x:Class="POS.App.Views.ReportPurchasesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Laporan Pembelian">
    <DockPanel Margin="16">
        <TextBlock DockPanel.Dock="Top" Text="Laporan Pembelian" Style="{StaticResource TitleText}" Margin="0,0,0,12"/>
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Dari:" VerticalAlignment="Center"/>
                <DatePicker x:Name="DtFrom" Margin="8,0"/>
                <TextBlock Text="Sampai:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <DatePicker x:Name="DtTo" Margin="8,0"/>
                <Button Content="Terapkan" Click="Apply_OnClick" Margin="8,0" Style="{StaticResource AccentButton}"/>
            </StackPanel>
        </DockPanel>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nomor" Binding="{Binding Number}" Width="160"/>
                <DataGridTextColumn Header="Tanggal" Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" Width="120"/>
                <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding PaymentStatus}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
