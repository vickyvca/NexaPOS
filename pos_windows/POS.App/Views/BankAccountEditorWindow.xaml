<Window x:Class="POS.App.Views.BankAccountEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bank Account Editor" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Bank:" Grid.Row="0" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtBank" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Nomor Rekening:" Grid.Row="1" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtNumber" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Atas Nama:" Grid.Row="2" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtHolder" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Batal" Click="Cancel_OnClick" IsCancel="True"/>
            <Button Content="Simpan" Click="Save_OnClick" IsDefault="True" Style="{StaticResource AccentButton}" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
