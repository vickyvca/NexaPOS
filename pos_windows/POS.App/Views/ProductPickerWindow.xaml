<Window x:Class="POS.App.Views.ProductPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pilih Produk" Height="500" Width="700">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal">
      <TextBox x:Name="TxtSearch" Width="300"/>
      <Button Content="Cari" Click="Search_OnClick"/>
    </StackPanel>
    <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" MouseDoubleClick="Grid_OnMouseDoubleClick">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Nama" Binding="{Binding Name}" Width="*"/>
        <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="180"/>
        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="120"/>
        <DataGridTextColumn Header="H1" Binding="{Binding PriceH1}" Width="100"/>
        <DataGridTextColumn Header="H2" Binding="{Binding PriceH2}" Width="100"/>
        <DataGridTextColumn Header="Grosir" Binding="{Binding PriceGrosir}" Width="100"/>
      </DataGrid.Columns>
    </DataGrid>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Pilih" Click="Pick_OnClick"/>
      <Button Content="Batal" Click="Cancel_OnClick"/>
    </StackPanel>
  </Grid>
</Window>
