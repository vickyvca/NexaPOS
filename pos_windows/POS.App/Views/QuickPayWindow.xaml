<Window x:Class="POS.App.Views.QuickPayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pembayaran" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
  <Border Padding="16" Background="{StaticResource SurfaceBrush}">
    <StackPanel>
      <TextBlock Text="Total Tagihan" Style="{StaticResource TitleText}"/>
      <TextBlock x:Name="TxtTotal" FontSize="24" FontWeight="Bold"/>

      <DockPanel Margin="0,12,0,8">
        <Button Content="Tambah Baris" DockPanel.Dock="Left" Click="AddRow_OnClick"/>
        <Button Content="Hapus Baris" DockPanel.Dock="Left" Margin="8,0,0,0" Click="RemoveRow_OnClick"/>
      </DockPanel>

      <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" MinWidth="520">
        <DataGrid.Columns>
          <DataGridComboBoxColumn Header="Metode" SelectedItemBinding="{Binding Method, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Methods}" Width="120"/>
          <DataGridTemplateColumn Header="Nominal" Width="120"><DataGridTemplateColumn.CellTemplate><DataTemplate><TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Right" PreviewTextInput="Amount_PreviewTextInput" DataObject.Pasting="Amount_OnPaste"/></DataTemplate></DataGridTemplateColumn.CellTemplate></DataGridTemplateColumn>
          <DataGridComboBoxColumn Header="Extra" SelectedItemBinding="{Binding Extra, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Options}" Width="*"/>
        </DataGrid.Columns>
      </DataGrid>

      <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
        <TextBlock Text="Dibayar:" Margin="0,0,8,0"/>
        <TextBlock x:Name="TxtPaid" FontWeight="Bold"/>
        <TextBlock Text="   Sisa:" Margin="18,0,8,0"/>
        <TextBlock x:Name="TxtRemain"/>
        <TextBlock Text="   Kembali:" Margin="18,0,8,0"/>
        <TextBlock x:Name="TxtChange"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
        <Button Content="Bayar" Style="{StaticResource AccentButton}" IsDefault="True" Click="Pay_OnClick"/>
        <Button Content="Batal" Margin="8,0,0,0" IsCancel="True"/>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>